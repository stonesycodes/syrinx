---
layout: base.njk
---

<section class="mac-hero">
  <!-- Mac frame -->
  <picture>
    <source srcset="{{ '/assets/images/mac-se.webp' | url }}" type="image/webp">
      <img
        src="{{ '/assets/images/mac-se.png' | url }}"
        alt="Macintosh SE"
        class="mac-frame"
    >
  </picture>

  <!-- Screen overlay -->
  <div class="mac-screen">
    <div class="screen-window">
      <h2 class="screen-title">Vintage Computer Catalog</h2>

      <ul class="catalog">
        <li class="card header">
          <strong>Name</strong>
          <strong class="col year">Year</strong>
          <strong>Status</strong>
        </li>

        {% for machine in machines %}
          <li class="card" data-slug="{{ machine.slug }}">
            <span class="col name">
              <a class="name-link" href="{{ ('/machines/' + machine.slug + '/') | url }}">
                {{ machine.name }}
              </a>
            </span>

            <span class="col year">{{ machine.year }}</span>
            <span class="col status">Loadingâ€¦</span>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>


