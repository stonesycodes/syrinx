---
layout: base.njk
---

{% set screen_html %}
  <div class="mac-menubar">
  <div class="menu-left">
    <span class="apple"></span>
    <span class="menu">File</span>
    <span class="menu">Edit</span>
    <span class="menu">View</span>
    <span class="menu">Special</span>
  </div>

  <div class="menu-right">
    <span class="clock" id="mac-clock">12:00 PM</span>
  </div>
</div>


  <ul class="catalog">
    <li class="card header">
      <strong>Name</strong>
      <strong class="col year">Year</strong>
      <strong>Status</strong>
    </li>

    {% for machine in machines %}
      <li class="card" data-slug="{{ machine.slug }}">
        <span class="col name">
          <a class="name-link" href="{{ ('/machines/' + machine.slug + '/') | url }}">
            {{ machine.name }}
          </a>
        </span>

        <span class="col year">{{ machine.year }}</span>
        <span class="col status">Loading…</span>
      </li>
    {% endfor %}
  </ul>
{% endset %}

{% include "mac-frame.njk" %}
