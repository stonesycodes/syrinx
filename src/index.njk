---
layout: base.njk
---

<div class="finder-window">
  <div class="finder-titlebar" aria-hidden="true">
    <span class="finder-btn close"></span>

    <div class="finder-titlewrap">
      <span class="finder-grab" aria-hidden="true"></span>
      <div class="finder-title">Vintage Computer Catalog</div>
      <span class="finder-grab" aria-hidden="true"></span>
    </div>

    <span class="finder-btn zoom"></span>
  </div>

  <div class="finder-content">
    <ul class="catalog">
      <li class="card header">
        <strong>Name</strong>
        <strong class="col year">Year</strong>
        <strong>Status</strong>
      </li>

      {% for machine in machines %}
        <li class="card" data-slug="{{ machine.slug }}">
          <span class="col name">
            <a class="name-link" href="{{ ('/machines/' + machine.slug + '/') | url }}">
              {{ machine.name }}
            </a>
          </span>
          <span class="col year">{{ machine.year }}</span>
          <span class="col status status-cell" data-slug="{{ machine.slug }}">Loadingâ€¦</span>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
