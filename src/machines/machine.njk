---
layout: base.njk
pagination:
  data: machines
  size: 1
  alias: machine
permalink: "/machines/{{ machine.slug }}/index.html"
---

{% set screen_html %}
  <h2 class="screen-title">{{ machine.name }}</h2>

  <div class="detail">
    <div><strong>Year:</strong> {{ machine.year }}</div>

    <p class="status">Loading…</p>

    <div class="detail-actions">
      <button class="checkout-btn" data-slug="{{ machine.slug }}">Check out</button>
      <button class="repair-btn" data-slug="{{ machine.slug }}">Mark as Repairing</button>
    </div>

    <p>
      <a href="{{ '/' | url }}">← Back to catalog</a>
    </p>
  </div>
{% endset %}

{% include "mac-frame.njk" %}
