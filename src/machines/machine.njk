---
layout: base.njk
pagination:
  data: machines
  size: 1
  alias: machine
permalink: "/machines/{{ machine.slug }}/index.html"
---

<div class="finder-window">
  <div class="finder-titlebar" aria-hidden="true">
    <span class="finder-btn close"></span>

    <div class="finder-titlewrap">
      <span class="finder-grab" aria-hidden="true"></span>
      <div class="finder-title">{{ machine.name }}</div>
      <span class="finder-grab" aria-hidden="true"></span>
    </div>

    <span class="finder-btn zoom"></span>
  </div>

  <div class="finder-content machine-content">
    <div class="machine-headerbar" aria-hidden="true">
      <div class="machine-header-cell">Manufacturer</div>
      <div class="machine-header-cell">Year</div>
      <div class="machine-header-cell">Specifications</div>
      <div class="machine-header-cell">Machine Image</div>
    </div>

    <div class="machine-meta">
      <div class="machine-meta-cell">{{ machine.manufacturer }}</div>
      <div class="machine-meta-cell">{{ machine.year }}</div>
      <div class="machine-meta-cell">{{ machine.specs }}</div>
      <div class="machine-meta-cell machine-image-cell">
        <img
          class="machine-image"
          src="{{ ('/assets/images/' + machine.slug + '.webp') | url }}"
          alt="{{ machine.name }}"
        />
      </div>
    </div>

    <div class="finder-detail">
      <div class="detail">
        <div class="mini-grid">
          <div class="mini-row header">
            <strong>Status</strong>
          </div>

          <div class="mini-row">
            <div class="cell status">
              <span class="status" data-state="{{ machine.status }}">{{ machine.status }}</span>
            </div>
          </div>
        </div>

        <div class="detail-actions">
          <button
            class="checkout-btn status-toggle"
            type="button"
            data-slug="{{ machine.slug }}"
            data-toggle="available">
            Mark Available
          </button>

          <button
            class="checkout-btn status-toggle"
            type="button"
            data-slug="{{ machine.slug }}"
            data-toggle="repairing">
            Mark As Repairing
          </button>

          <a class="button" href="{{ '/' | url }}">‚Üê Back to catalog</a>
        </div>
      </div>
    </div>
  </div>
</div>
